<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.audioplayer.AudioPlayerActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="?attr/colorPrimaryVariant"
        android:background="?attr/selectableItemBackground"/>

    <ImageView
        android:id="@+id/coverArt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/header_size"
        tools:text="Yesterday (Remastered 2009)"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintTop_toBottomOf="@+id/coverArt"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"/>

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        tools:text="The Beatles "
        android:layout_marginTop="12dp"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintTop_toBottomOf="@+id/songName"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"/>

    <ImageButton
        android:id="@+id/addToPlaylistButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintTop_toTopOf="@id/playPauseButton"
        app:layout_constraintBottom_toBottomOf="@id/playPauseButton"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        android:contentDescription="Add to Playlist"
        android:background="?attr/selectableItemBackground"/>

    <ImageButton
        android:id="@+id/playPauseButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Play"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:layout_marginBottom="24dp"/>

    <ImageButton
        android:id="@+id/addToFavoritesButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_heart"
        app:layout_constraintTop_toTopOf="@id/playPauseButton"
        app:layout_constraintBottom_toBottomOf="@id/playPauseButton"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        android:contentDescription="Like"/>

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSecondary"
        android:layout_marginTop="4sp"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintTop_toBottomOf="@id/playPauseButton"
        app:layout_constraintStart_toStartOf="@id/playPauseButton"
        app:layout_constraintEnd_toEndOf="@id/playPauseButton"
        android:text="0:30"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:text="@string/duration"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/progress"
        android:textColor="@color/icon_settings_color"/>

    <TextView
        android:id="@+id/trackDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:textSize="14sp"
        tools:text="5:35"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/progress"
        android:textColor="?attr/colorPrimaryVariant"/>

    <TextView
        android:id="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/album"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/duration"
        android:textColor="@color/icon_settings_color"/>

    <TextView
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:textSize="14sp"
        tools:text="Yesterday (Remastered 2009)"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/trackDuration"
        android:textColor="?attr/colorPrimaryVariant"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/year"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/album"
        android:textColor="@color/icon_settings_color"/>

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:textSize="14sp"
        tools:text="1965"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        android:textColor="?attr/colorPrimaryVariant"/>

    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/direction"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/year"
        android:textColor="@color/icon_settings_color"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:textSize="14sp"
        tools:text="Rock"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/releaseDate"
        android:textColor="?attr/colorPrimaryVariant"/>

    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/country_name"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/direction"
        android:textColor="@color/icon_settings_color"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:paddingBottom="16sp"
        android:textSize="14sp"
        tools:text="Великобритания"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/genre"
        android:textColor="?attr/colorPrimaryVariant"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
